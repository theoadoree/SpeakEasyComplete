# SpeakEasy Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================
# SERVER CONFIGURATION
# ============================================

# Server port (default: 8080)
PORT=8080

# Environment (development, staging, production)
NODE_ENV=development

# ============================================
# OPENAI CONFIGURATION
# ============================================

# OpenAI API Key (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# ============================================
# GOOGLE OAUTH CONFIGURATION
# ============================================

# Google OAuth Client ID
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google OAuth Redirect URI (for web)
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# ============================================
# APPLE SIGN IN CONFIGURATION
# ============================================

# Apple Developer Team ID
# Get from: https://developer.apple.com/account
APPLE_TEAM_ID=YOUR_TEAM_ID

# Apple Services ID (Client ID)
# Create at: https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=com.speakeasy.webapp

# Apple Key ID
# Get when you create a key at: https://developer.apple.com/account/resources/authkeys
APPLE_KEY_ID=YOUR_KEY_ID

# Apple Private Key (base64 encoded or direct text)
# Download .p8 file and paste contents or base64 encode it
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"

# Alternative: Base64 encoded private key
# APPLE_PRIVATE_KEY_BASE64=your-base64-encoded-key

# ============================================
# FIREBASE CONFIGURATION
# ============================================

# Firebase Project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase Client Email (from service account)
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Firebase Private Key
# Paste from service account JSON (keep the newlines as \n)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Firebase-Private-Key\n-----END PRIVATE KEY-----"

# Firebase Database URL (optional)
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ============================================
# GOOGLE CLOUD CONFIGURATION
# ============================================

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-gcloud-project-id

# Path to service account key file
# Store this in backend/config/ and NEVER commit it
GOOGLE_APPLICATION_CREDENTIALS=./config/gcloud-sa-key.json

# Google Cloud Region
GOOGLE_CLOUD_REGION=us-central1

# ============================================
# DATABASE CONFIGURATION (TODO)
# ============================================

# MongoDB (when implemented)
# MONGODB_URI=mongodb://localhost:27017/speakeasy
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/speakeasy

# PostgreSQL (when implemented)
# DATABASE_URL=postgresql://user:password@localhost:5432/speakeasy

# Redis (when implemented)
# REDIS_URL=redis://localhost:6379

# ============================================
# OLLAMA CONFIGURATION (Alternative to OpenAI)
# ============================================

# Ollama server URL (for local LLM)
OLLAMA_URL=http://localhost:11434

# Ollama models
QWEN_MODEL=qwen2:latest
LLAMA_MODEL=llama2:latest

# ============================================
# SESSION & SECURITY
# ============================================

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here-minimum-32-characters

# Session Secret
SESSION_SECRET=your-session-secret-here

# Token Expiration (default: 7d)
JWT_EXPIRES_IN=7d

# ============================================
# STRIPE CONFIGURATION (for payments)
# ============================================

# Stripe API Keys (get from: https://dashboard.stripe.com/apikeys)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# EMAIL CONFIGURATION (optional)
# ============================================

# SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@speakeasy.com

# Gmail
# GMAIL_USER=your-email@gmail.com
# GMAIL_APP_PASSWORD=your-app-password

# ============================================
# CORS & SECURITY
# ============================================

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://speakeasy.app

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ============================================
# LOGGING & MONITORING
# ============================================

# Log level (error, warn, info, debug, verbose)
LOG_LEVEL=info

# Enable request logging
LOG_REQUESTS=true

# Sentry DSN (optional, for error tracking)
# SENTRY_DSN=your-sentry-dsn

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
ENABLE_TTS=true
ENABLE_STREAMING=true
ENABLE_ANALYTICS=true

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Debug mode
DEBUG=false

# Mock external APIs (for testing)
MOCK_APIS=false

# ============================================
# NOTES
# ============================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values
# 3. NEVER commit .env to git
# 4. For production, use Google Cloud Secret Manager
# 5. Restart server after changing .env values
# 6. Keep .env.example updated when adding new variables
